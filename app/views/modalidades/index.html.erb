 <div class="categdespesas index">
      <h2>Modalidades </h2>
       <%= form_tag modalidades_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
          

          <div class="col-lg-8">
          </div>
                  
        <div class="col-lg-2 form-group">  
          <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_modalidade_path %>';"><i class="fa fa-plus-circle"></i> Nova Modalidade</button></span>
        </div>
        </div>
      </div>
      </div>
      <% end  %>  
      
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Receita</th>
      <th>Despesa</th>
      <th colspan="3"></th>
    </tr>
  </thead>
       <tbody>
    <% @modalidades.each do |modalidade| %>
      <tr>
        <td><%= modalidade.nome %></td>
        <td><%= modalidade.descricao %></td>
        <td><%= modalidade.receita ? 'Sim' : 'Não' %></td>
        <td><%= modalidade.despesa ? 'Sim' : 'Não' %></td>
        <td><%= link_to 'Exibir', modalidade %></td>
        <td><%= link_to 'Editar', edit_modalidade_path(modalidade) %></td>
        <td><%= link_to 'Deletar', modalidade, method: :delete, data: { confirm: 'Deseja Deletar Modalidade ' +modalidade.nome+'?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>


  </div>



