<div class="categdespesas index">
      <h2>Usuários </h2>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
          <div class="col-lg-9  form-group">  
                       
          </div>
        
          <div class="col-lg-2 form-group">  
          <span class="input-group-btn" style="display: inline-block; padding-left: 5px;"><button class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_user_path %>';"><i class="fa fa-plus-circle"></i> Novo Usuário </button></span>
        </div>
        </div>
      </div>
      </div>
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Tipo</th>
        <th></th>
        <th colspan="3"></th>
                         
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>

            <td><%= user.nome %></td>
            <td><%= user.email %></td>
            <td><%= user.tipo %></td>                    
          
        <td><%= link_to 'Exibir', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Deseja excluir o Usuário '+user.nome+'?' } %></td>
               
            
          </tr>
          <% end %>
      </tbody>
  </table>
</div>


