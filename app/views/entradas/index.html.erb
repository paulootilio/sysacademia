 <div class="categdespesas index">
      <h2>Entradas </h2>
       <%= form_tag entradas_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
          <div class="col-lg-4  form-group">  
            <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Nome do Cliente" %>  
          </div>
          <div class="col-lg-4 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary" %>
          </div>

                  
        <div class="col-lg-2 form-group">  
          <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_entrada_path %>';"><i class="fa fa-plus-circle"></i> Nova Entrada</button></span>
        </div>
        </div>
      </div>
      </div>
      <% end  %>  
      
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
      <tr>
      <th>Codigo</th>
      <th>Data</th>
      <th>Cliente</th>
      <th>Plano</th>
      <th>Modalidade</th>
      <th>Valor</th>
      <th>Desconto</th>
      <th>Total</th>
           
      <th colspan="3"></th>
                      
      </thead>
      <tbody>
    <% @entradas.each do |entrada| %>
      <tr>
        <td><%= entrada.id %></td>
        <td><%= entrada.created_at.strftime("%d/%m/%Y ") %></td>
        <td><%= entrada.cliente.nome %></td>
        <td><%= entrada.plano.nome %></td>
        <td><%= entrada.modalidade.nome %></td>
        <td><%= entrada.valor %></td>
        <td><%= entrada.desconto %></td>
        <td><%= entrada.total %></td>
             
        <td><%= link_to 'Exibir', entrada %></td>
        <td><%= link_to 'Editar', edit_entrada_path(entrada) %></td>
        <td><%= link_to 'Deletar', entrada, method: :delete, data: { confirm: 'Deseja Deletar '+entrada.cliente.nome+'?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>


  </div>

