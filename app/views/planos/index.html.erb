 <div class="categdespesas index">
      <h2>Planos </h2>
       <%= form_tag planos_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
          

          <div class="col-lg-8">
          </div>
                  
        <div class="col-lg-2 form-group">  
          <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_plano_path %>';"><i class="fa fa-plus-circle"></i> Novo Plano</button></span>
        </div>
        </div>
      </div>
      </div>
      <% end  %>  
      
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
      <tr>
      <th>Nome</th>
      <th>Referente</th>
      <th>Descricao</th>
      <th>Valor</th>
      <th colspan="3"></th>
                      
      </thead>
      <tbody>
    <% @planos.each do |plano| %>
      <tr>
        <td><%= plano.nome %></td>
        <td><%= plano.referente %></td>
        <td><%= plano.descricao %></td>
        <td><%= plano.valor %></td>
        <td><%= link_to 'Exibir', plano %></td>
        <td><%= link_to 'Editar', edit_plano_path(plano) %></td>
        <td><%= link_to 'Deletar', plano, method: :delete, data: { confirm: 'Deseja Deletar Plano ' +plano.nome+'?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>


  </div>



