 <div class="categdespesas index">
      <h2>Fornecedores </h2>
       <%= form_tag fornecedors_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
          <div class="col-lg-4  form-group">  
            <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Nome do Fornecedor" %>  
          </div>
          <div class="col-lg-4 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary" %>
          </div>

                  
        <div class="col-lg-2 form-group">  
          <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_fornecedor_path %>';"><i class="fa fa-plus-circle"></i> Novo Fornecedor</button></span>
        </div>
        </div>
      </div>
      </div>
      <% end  %>  
      
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
      <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>CPF</th>
      <th>Telefone</th>      
      <th colspan="3"></th>
                      
      </thead>
      <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.email %></td>
        <td><%= fornecedor.cpf %></td>
        <td><%= fornecedor.telefone %></td>     
        <td><%= link_to 'Exibir', fornecedor %></td>
        <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Deletar', fornecedor, method: :delete, data: { confirm: 'Deseja Deletar '+fornecedor.nome+'?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>


  </div>


