<div class="categdespesas index">
      <h2>Saidas </h2>
       <%= form_tag saidas_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
          <div class="col-lg-4  form-group">  
            <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Nome do Fornecedor" %>  
          </div>
          <div class="col-lg-4 form-group">
                <%= submit_tag "Pesquisar", :class => "btn btn-primary" %>
          </div>

                  
        <div class="col-lg-2 form-group">  
          <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_saida_path %>';"><i class="fa fa-plus-circle"></i> Nova Saída</button></span>
        </div>
        </div>
      </div>
      </div>
      <% end  %>  
      
  <div class="table-responsive">
  <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
      <tr>
      <th>Código</th>
      <th>Data</th>
      <th>Fornecedor</th>
      <th>Modalidade</th>
      <th>Descricao</th>
      <th>Valor</th>    
      <th colspan="3"></th>
                      
      </thead>
      <tbody>
    <% @saidas.each do |saida| %>
      <tr>
        <td><%= saida.id %></td>
        <td><%= saida.created_at.strftime("%d/%m/%Y ") %></td>
        <td><%= saida.fornecedor.nome %></td>
        <td><%= saida.modalidade.nome %></td>
        <td><%= saida.descricao %></td>
        <td><%= saida.valor %></td>        
        <td><%= link_to 'Exibir', saida %></td>
        <td><%= link_to 'Editar', edit_saida_path(saida) %></td>
        <td><%= link_to 'Deletar', saida, method: :delete, data: { confirm: 'Deseja Deletar '+saida.fornecedor.nome+'?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>


  </div>



